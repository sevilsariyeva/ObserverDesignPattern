<UserControl x:Class="Youtube_Observer_.Views.UserControls.ChoiceUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Youtube_Observer_.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Color="DarkSlateGray" Offset="0"></GradientStop>
                <GradientStop Color="Black" Offset="1"></GradientStop>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Command="{Binding LogoClickCommand}" Style="{StaticResource allButtons}" BorderThickness="0" Background="Transparent" Width="350" Height="150" Margin="0,0,0,150">
            <Image Stretch="Fill" Source="/Icons/youtube.png"></Image>
        </Button>
        <Button Style="{StaticResource mainButtons}" Command="{Binding SignInClickCommand}" Width="250" Height="80" Margin="147,326,453,74" Content="Sign In"></Button>
        <Button Style="{StaticResource mainButtons}" Command="{Binding SignUpClickCommand}" Width="250" Height="80" Margin="475,326,125,74" Content="Sign Up"></Button>
    </Grid>
</UserControl>
